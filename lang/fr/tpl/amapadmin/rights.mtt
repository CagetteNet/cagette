::use 'amapadmin/design.mtt'::

		<h3>::_("Gestion des droits et acc√®s")::</h3>		
		
		$$insert(Ajouter un droit,/amapadmin/editRight)
		
		<table class="table table-bordered">
			<tr>
				<th>::_("Nom")::</th>
				<th>::_("Droits")::</th>
				<th>::_("Actions")::</th>
				
			</tr>
			::foreach u users::
			<tr>
				<td>
					::u._user.getName()::	
				</td>
				<td>
					<ul ::cond u._rights!=null::>
