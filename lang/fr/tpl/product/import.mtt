::use 'design.mtt'::

<div class="span12">
	<div class="article">
		<h2>::_("Importer des produits")::</h2>
		
		::if step==1::
		
			<form action="/product/import/::contract.id::" method="POST" enctype="multipart/form-data">
				<p>
					<input name="file" type="file"/>
				</p>
				<p>
					<input type="submit" class="btn btn-primary" value="::_("Importer")::"/>	
				</p>
				
			</form>
		
		::elseif step==2::
			<h4>Produits à importer</h4>
			<div style="margin-bottom:24px;">
				::if !csv.isEmpty()::
				
				<table class="table table-bordered" style="/*font-size:11px;*/background-color:#FFF;">
					
					<tr>
						::foreach h csv.getHeaders()::
						<th>::_(h)::</th>
						::end::
					</tr>
					
					::foreach d csv.getDatas()::
					<tr>
						::foreach r d::
						<td>
							::if r!=null:: ::r:: ::end::
						</td>
						::end::
					</tr>
					::end::
				</table>
				<div class="alert alert-error">
						<b>::_("Attention")::</b>
						<p>
							::raw _("before validating the import, please check if the table above is correctly filled.<br/>
							If data are not in line or not corresponding to the right column, it means that your CSV file is not correct.")::
						</p>
						<a href="/product/import/::contract.id::">Recommencer</a>
					</div>
				<a href="/product/import/::contract.id::?confirm=1" class="btn btn-danger">::_("Importer ces produits dans la base de données")::</a>
				::else::
					
					<div class="alert alert-error">
						<b>::_("Oups !")::</b>
						<p>::_("It seems that there is no data to import
						Check if data of your file are valid and if products are not already saved in the database of Cagette.net")::</p>
						<a href="/product/import/::contract.id::">Recommencer</a>
					</div>
				
				::end::
			</div>
			
			<!--<div ::cond data2.length > 0:: >
				
				<h4>::_("Produits déjà présentes dans la base de données")::</h4>
				<table class="table" style="font-size:11px;color:#666666;background-color:#FFF;">
					<tr>
						<th>::_("Nom")::</th>
						<th>::_("Prix")::</th>
				</tr>
				::foreach d data2::
				<tr>
					::foreach r d::
					<td>
						::if r!=null:: ::r:: ::end::
					</td>
					::end::
				</tr>
				::end::
				</table>
			</div>-->
		::elseif step==3::
			::if numImported>0::
			
			<div class="alert alert-success">
				<b>::__("Bravo ! Vous avez importé ::numImported:: produits dans votre base de données", {num:numImported})::</b>
			</div>
			
			::else::
			<p>::_("Vous n'avez rien importé dans votre base de données car votre fichier était vide ou contenait des produits déjà enregistrées dans votre base de données.")::</p>
			::end::
			<a href="/contractAdmin/products/::contract.id::">::_("Revenir à la gestion des produits")::</a>
			
			
		::end::
	</div>

	<div class="block">
		<h3>::_("Aide")::</h3>
		::_("Cette page va vous permettre d'importer un grand nombre de produits dans votre base de données à partir d'un fichier Excel   ou Libre Office.")::
		<br/>
		<ul>
			<li>::_("To start, <a href=\"/produits.xls\">Download this demo file</a>")::</li>
			<li>::_("Fill correctly this file, or modify your existing file to respect strictly the order of columns")::</li>
			<li>::_("When your file is ready, click on\"Save as\" in your Excel sheet and choose the format CSV")::</li>
			<li>::_raw("Choose the following options: separation characters: <b>comma</b>, encoding: <b>Unicode UTF8<b/>"):: </li>
			<li>::_("Enregistrez votre fichier")::</li>
			<li>::_("Then click on the button above \"Choose a file\" and send your file"):: </li>
		</ul>
	</div>
			
</div>
::end::