::use 'design.mtt'::

<div class="col-md-12">
	<div class="article">

		<h2>::_("Select a vendor")::</h2>
		
		<p>
			::_("We found these vendors in our database :")::
		</p>
		<div class="row">
			::foreach v vendors::
			<div class="col-md-4 col-sm-6">
				<a href="/contract/insertChoose/::v.id::" class="clickable groupBlock">					
					::if v._image!=null::
					<img src="::file(v._image)::" class="img-responsive" style="width:92px;float:left;margin-right:12px;" />
					::end::
					<b>::v.name::</b>
					<br/>
					::v.zipCode:: ::v.city::<br/>
					::v.email::
				</a>
			</div>
			::end::
		</div>


	</div>
</div>

<div class="col-md-12">
	<div class="article text-center">
		<p>
			::_("The vendor you want to work with is not in this list ?")::
		</p>
		<a href="/contract/insertVendor/::email::/::name::" class="btn btn-default btn-lg">::_("Key-in a new vendor")::</a>

	</div>
</div>
	
::end::