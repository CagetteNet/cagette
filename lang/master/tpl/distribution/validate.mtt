::use 'design.mtt'::

<style>
	table tr td{
		white-space: nowrap;
		overflow-x:hidden;
	}
</style>

	::set date = distribution.getDate()::
	::set place = distribution.getPlace()::

	<div class="col-md-12">
		<div class="article">
			
			<div class="text-center">
				<h3>
					::_("Validate the delivery of the"):: ::hDate(date)::
				</h3>	
				<h4
					><i class="icon icon-map-marker"></i>::place::
				</h4>
				
				<p>
					::if(confirmed)::
					<div class="alert alert-success block-center" style="width:150px;margin:auto;">
						<i class="icon icon-check"></i>
						::_("Validated")::
					</div>
					::else::
					<div class="alert alert-danger block-center" style="width:150px;margin:auto;">
						<span class="glyphicon glyphicon-exclamation-sign"></span>
						::_("Not validated")::
					</div>				
					::end::	
				</p>
			</div>	
		
		
		<p class="text-center">
				<!--<a href="/contractAdmin/ordersByDate/::date.toString().substr(0,10)::/::place.id::" class="btn btn-default btn-sm">
				<i class="icon icon-list"></i> ::_("Back to the summary sheet of orders"):: </a>-->	
				

				<a href="/distribution/autovalidate/::distribution.id::" class="btn btn-danger" $$confirm(Confirmez-vous que les commandes et les paiements de cette distribution sont bien à jour ? Il ne sera plus possible de modifier les commandes après avoir validé cette distribution)>
					<i class="icon icon-check"></i> Valider toute la distribution
				</a>
		</p>
		
		
		<table class="table table-bordered table-hover table-condensed"  style="width:100%;">
			
			::foreach u users::
				
				::set basket = getBasket(u.id,place.id,date)::
				
				::if(basket.isValidated()==true)::
					::set class="success"::
				::else::
					::set class="danger"::
				::end::
				<tr class="::class::">
					<td>
						<div class="basketNumber" ::cond basket!=null:: >
							<i class="fa fa-shopping-basket" aria-hidden="true"></i> ::_("Num"):: ::basket.num::
						</div>
					</td>
					<td>
						::u.getCoupleName():: 
					</td>	
					
					<td class="text-right">
							
							::if(class=="danger")::
							<a href="/validate/::distribution.id::/::u.id::" class="btn btn-danger">
								<i class="fa fa-chevron-right" aria-hidden="true"></i>
								::_("To be validated")::
							</a> 
							::else::
							<a href="/validate/::distribution.id::/::u.id::" class="btn">
								<i class="icon icon-check"></i>
								::_("Validated")::
							</a> 
							::end::
					</td>
				</tr>
				
			::end::
				
				
			

		</table>

		<p class="text-left">
			<a href="/distribution/" class="btn btn-default">
				<i class="icon icon-chevron-left"></i> ::_("Back")::
			</a>
		</p>

	</div>


	
	
</div>

::end::
