<div id="messages-neo-container"></div>

<script>
	document.addEventListener("DOMContentLoaded", function(event) {
		setTimeout(function() {
			_NeolithicViewsGenerator.messagesModule("messages-neo-container", {
				groupId: parseInt("::user.getGroup().id::", 10),
				whichUser: parseInt("::whichUser()::")
			});
		}, 50);
	})
</script>
