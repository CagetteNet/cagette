		$$timeframe(::timeframe::)
		::set students = 0::

		<table class="table table-striped">
			<tr>
				<th>ID</th>
				<th>Formation</th>
				
				<th>Date J1</th>
				<th>Date J2</th>
				<th>Nb stagiaires</th>
			</tr>
			::foreach c courses::
			<tr>
				<td style="font-weight:bold;">::c.ref::</td>
				<td>
					<a href="/p/hosted/course/view/::c.id::">::c.name::</a>
				</td>
				<!--<td>::c._teacher.getName()::</td>-->
				<td>::dDate(c.date)::</td>
				<td>::dDate(c.end)::</td>
				<td style="width:150px;">

					::set st = c.getStudents().length::
					::set students = students + st::
					::st::
					<!--::if(c._group!=null)::
						<a href="/group/::c._group.id::" target="_blank">::c._group.name::</a>
					::end::-->
				</td>
			</tr>
			::end::
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td>Total</td>
				<td><b>::students::</b></td>
			</tr>
		</table>
	</div>
